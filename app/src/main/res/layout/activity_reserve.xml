<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ReserveActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/roomScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/arrow_left_solid_full"
                app:tint="@color/black" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/cropped_nu_shield_fc_rgb_pos_aw" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/clan_pro_black"
                    android:text="NU Clark"
                    android:textColor="@color/blue"
                    android:textSize="28sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/clan_pro_black"
            android:gravity="center"
            android:text="Reserve Facility"
            android:textColor="@color/blue"
            android:textSize="22sp"
            android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/BTN_peArea"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/clan_pro_black"
                android:gravity="start|center_vertical"
                android:paddingStart="20dp"
                android:text="PE Area"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="16sp"
                app:cornerRadius="12dp"
                app:strokeColor="#BDBDBD" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/BTN_AVR"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/clan_pro_black"
                android:gravity="start|center_vertical"
                android:paddingStart="20dp"
                android:text="AVR"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="16sp"
                app:cornerRadius="12dp"
                app:strokeColor="#BDBDBD" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/BTN_caseRoom"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/clan_pro_black"
                android:gravity="start|center_vertical"
                android:paddingStart="20dp"
                android:text="Case Room"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="16sp"
                app:cornerRadius="12dp"
                app:strokeColor="#BDBDBD" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/BTN_LRCD1"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/clan_pro_black"
                android:gravity="start|center_vertical"
                android:paddingStart="20dp"
                android:text="LRC Discussion Room 1"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="16sp"
                app:cornerRadius="12dp"
                app:strokeColor="#BDBDBD" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/BTN_LRCD2"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/clan_pro_black"
                android:gravity="start|center_vertical"
                android:paddingStart="20dp"
                android:text="LRC Discussion Room 2"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="16sp"
                app:cornerRadius="12dp"
                app:strokeColor="#BDBDBD" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/BTN_sportsComplex"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/clan_pro_black"
                android:gravity="start|center_vertical"
                android:paddingStart="20dp"
                android:text="Sports Complex"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="16sp"
                app:cornerRadius="12dp"
                app:strokeColor="#BDBDBD" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/BTN_computerLab"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/clan_pro_black"
                android:gravity="start|center_vertical"
                android:paddingStart="20dp"
                android:text="Computer Laboratory"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="16sp"
                app:cornerRadius="12dp"
                app:strokeColor="#BDBDBD" />

        

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/modern_nav_background"
        android:elevation="8dp"
        app:itemIconSize="32dp"
        app:itemIconTint="@android:color/black"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>